<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/num1EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Número 1"
        android:inputType="numberDecimal"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/num2EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num1EditText"
        android:layout_marginTop="16dp"
        android:hint="Número 2"
        android:inputType="numberDecimal"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/resultEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num2EditText"
        android:layout_marginTop="16dp"
        android:hint="Resultado"
        android:inputType="none"
        android:focusable="false"
        android:layout_centerHorizontal="true"
        android:enabled="false"/>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_below="@+id/resultEditText"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:backgroundTint="#FFC0CB"/>

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_below="@+id/resultEditText"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/buttonAdd"
        android:backgroundTint="#FFC0CB"/>

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:layout_below="@+id/resultEditText"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/buttonSubtract"
        android:backgroundTint="#FFC0CB"/>

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="÷"
        android:layout_below="@+id/resultEditText"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/buttonMultiply"
        android:backgroundTint="#FFC0CB"/>

</RelativeLayout>